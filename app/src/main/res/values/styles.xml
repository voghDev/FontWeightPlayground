<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SimpleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/sample_text</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="SimpleText.400">
        <item name="android:textFontWeight">400</item>
        <item name="android:fontWeight">400</item>
        <item name="fontWeight">400</item>
        <item name="android:fontFamily">@font/inter_400</item>
    </style>

    <style name="SimpleText.500">
        <item name="android:textFontWeight">500</item>
        <item name="android:fontWeight">500</item>
        <item name="fontWeight">500</item>
        <item name="android:fontFamily">@font/inter_500</item>
    </style>

    <style name="SimpleText.600">
        <item name="android:textFontWeight">600</item>
        <item name="android:fontWeight">600</item>
        <item name="fontWeight">600</item>
        <item name="android:fontFamily">@font/inter_600</item>
    </style>

    <style name="SimpleText.800">
        <item name="android:textFontWeight">800</item>
        <item name="android:fontWeight">800</item>
        <item name="fontWeight">800</item>
        <item name="android:fontFamily">@font/inter_800</item>
    </style>
</resources>
